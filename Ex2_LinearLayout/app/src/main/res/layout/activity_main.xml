<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center|top"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/nutSO1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#8F1FDA"
        android:text="Nut so 1"
        android:textColor="#0089EC"
        android:textSize="20dp"
        android:layout_marginTop="50dp"
        />
    <Button
        android:id="@+id/nutSO2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#9C27B0"
        android:text="Nut so 2"
        android:textColor="#71B7EA"
        android:textSize="20dp"
        android:layout_marginTop="50dp"
        />
    <Button
        android:id="@+id/nutSO3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#C390E4"
        android:text="Nut so 3"
        android:textColor="#F8F8F8"
        android:textSize="20dp"
        android:layout_marginTop="50dp"
        />

</LinearLayout>